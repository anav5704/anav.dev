---
import { Image } from "astro:assets";
import withVetaia from "../images/with-vetaia.webp";
import anav from "../images/anav.webp";
import withNidhi from "../images/with-nidhi.webp";
import withVishant from "../images/with-vishant.webp";
import cat from "../images/cat.webp";
import withLoniLanu from "../images/with-loni-lanu.webp";
---

<section class="grid grid-cols-2 md:grid-cols-3 grid-rows-3 gap-4">
    <Image
        src={withVetaia}
        alt="Anav and Vetaia"
        width={500}
        height={500}
        format="webp"
        loading="eager"
        class="hero-image hidden md:block md:h-40"
    />
    <Image
        src={anav}
        alt="Anav staring of into the distance"
        width={500}
        height={500}
        format="webp"
        loading="eager"
        class="hero-image row-span-2"
    />
    <Image
        src={withNidhi}
        alt="Anav and Nivideta"
        width={500}
        height={500}
        format="webp"
        loading="eager"
        class="hero-image md:h-40"
    />
    <Image
        src={withVishant}
        alt="View from Anavs room"
        width={500}
        height={500}
        format="webp"
        loading="eager"
        class="hero-image row-span-2"
    />
    <Image
        src={cat}
        alt="Anav giving a thumbs up"
        width={500}
        height={500}
        format="webp"
        loading="eager"
        class="hero-image hidden md:block md:row-span-2"
    />
    <Image
        src={withLoniLanu}
        alt="Big American Shorthair"
        width={500}
        height={500}
        format="webp"
        loading="eager"
        class="hero-image md:h-40"
    />
</section>
