---
import type { CollectionEntry } from "astro:content";

interface Props {
    project: CollectionEntry<"projects">;
}

const { project } = Astro.props;
---

<a
    class="group p-2 border border-zinc-200 rounded-lg flex items-center gap-2 no-underline hover:no-underline"
    href={"/projects/" + project.slug}
>
    <div class="flex flex-col">
        <b class="group-hover:underline">{project.data.title}</b>
        <p class="faded no-underline">
            {project.data.description}
        </p>
    </div>
</a>
