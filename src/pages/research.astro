---
import { getCollection } from "astro:content";
import Header from "@components/Header.astro";
import ListLayout from "@layouts/list.astro";
import ResearchCard from "@components/ResearchCard.astro";

const unsortedResearch = await getCollection("research");

const reserearch = unsortedResearch.sort(
    (a, b) => b.data.createdAt.getTime() - a.data.createdAt.getTime()
);
---

<ListLayout
    title="Anav Chand | Research Papers"
    description="A collection of research papers, manily based on software engineering and computer science."
    contentType="Research"
>
    <article class="my-12">
        <Header content={`Research Papers (${reserearch.length})`} />
    </article>
    {reserearch.map((research) => <ResearchCard research={research} />)}
</ListLayout>
